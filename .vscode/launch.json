{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "SLAVE",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeVersion": "14.17.5",
            "runtimeArgs": ["--trace-warnings", "-r", "ts-node/register"],
            "env": {
                "NODE_DEBUG": "*"
            },
            "program": "${workspaceFolder}/slave.ts",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "MASTER",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeVersion": "14.17.5",
            "runtimeArgs": ["--trace-warnings", "-r", "ts-node/register"],
            "env": {
                "DEBUG": "*",
                "NODE_DEBUG": "*"
            },
            "program": "${workspaceFolder}/master.ts",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "MONITOR",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeVersion": "14.17.5",
            "runtimeArgs": ["--trace-warnings", "-r", "ts-node/register"],
            "env": {
                // "DEBUG": "*",
                "NODE_DEBUG": "*"
            },
            "program": "${workspaceFolder}/monitor.ts",
        }
    ]
}