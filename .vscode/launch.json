    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "SLAVE",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeVersion": "14.17.5",
            "runtimeExecutable": "ts-node-dev",
            "runtimeArgs": ["--trace-warnings", "--respawn"],
            "env": {
                "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin",
            },
            "program": "${workspaceFolder}/slave.ts",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "MASTER",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeVersion": "14.17.5",
            "runtimeExecutable": "ts-node-dev",
            "runtimeArgs": ["--trace-warnings", "--respawn"],
            "env": {
                "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin",
            },
            "program": "${workspaceFolder}/master.ts",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "MONITOR",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeVersion": "14.17.5",
            "runtimeExecutable": "ts-node-dev",
            "runtimeArgs": ["--trace-warnings", "--respawn"],
            "env": {
                "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin",
            },
            "program": "${workspaceFolder}/monitor.ts",
            "args": [],
            "outputCapture": "std"
        }
    ]
}